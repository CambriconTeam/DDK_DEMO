<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@mipmap/cf_layout_bg"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
xmlns:tools="http://schemas.android.com/tools"
tools:context="com.cambricon.productdisplay.activity.DocumentDetectionAct"
    >
<android.support.v7.widget.Toolbar
    android:id="@+id/document_detection_toolbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:layout_weight="2">
    <!--configuration button-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_bg"
            android:textColor="@color/test_text_color"
            android:text="GALLERY"/>
        <Button
            android:id="@+id/btnRefine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_bg"
            android:textColor="@color/test_text_color"
            android:text="Refine"/>
    </LinearLayout>
    <!--ImageView-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/document_detection_bg"/>

    </LinearLayout>

</LinearLayout>
<!-- TextOcr Result-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@mipmap/image_bg">
    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/text_padding"
        android:paddingRight="@dimen/text_padding"
        android:textColor="@color/test_text_color"
        android:text="@string/document_detection_describle"/>
</LinearLayout>

</LinearLayout>