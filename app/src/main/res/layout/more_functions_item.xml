<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="117dp"
    android:layout_margin="@dimen/more_item_margin"
    android:background="@android:color/white"
    android:elevation="2dp"
    >
    
    <LinearLayout
        android:id="@+id/iconback"
        android:layout_width="109dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/header_img"
            android:layout_width="94dp"
            android:layout_height="108dp"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/logo"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iconback"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/recycle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hellohhhhhhhh"
            android:textColor="@android:color/black"
            android:textSize="@dimen/more_function_text_title"/>

        <TextView
            android:id="@+id/recycle_test"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Hellohhhhhhhhhhhhhhhhhhhh"
            android:textSize="@dimen/more_function_text_summary"/>
    </LinearLayout>


</RelativeLayout>